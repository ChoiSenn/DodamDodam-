<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadBoardActivity">

    <TextView
        android:id="@+id/textView_read_board_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_read_board_contentType1"
        android:text="작성자"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView_read_board_writer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_read_board_contentType1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/textView_read_board_contentType1"
        android:text="작성자"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView_read_board_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_read_board_writer"
        android:text="날짜"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView_read_board_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_read_board_writer2"
        android:text="날짜"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

    <Button
        android:onClick="button_board_remove"
        android:enabled="false"
        android:id="@+id/button_board_delete"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_read_board_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제하기"/>

    <Button
        android:enabled="false"
        android:onClick="button_board_modify"
        android:id="@+id/button_board_modify"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_read_board_date2"
        android:layout_toLeftOf="@+id/button_board_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_read_board_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="여기가 진짜 제목라인입니다"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_read_board_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_read_board_title2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:scrollbars="vertical"
        android:text="여기는 내용라인입니다"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"/>

</RelativeLayout>